{
    "compilerOptions": {
        "declaration": true,
        "declarationDir": "types",
        // "strict": true,
        "outDir": "dist",
        "sourceMap": true,
        "noImplicitAny": true,
        "jsx": "react",
        "esModuleInterop": true,
        "noUnusedLocals": true,
        "moduleResolution": "node",
        "lib": ["dom", "es2015", "es2016"],
        "target": "es6",
        "module": "ESNext",
        "noUnusedParameters": true,
        "skipLibCheck": true,
        "isolatedModules": true,
        "baseUrl": "./src",
        "paths": {
            "~*": ["./*"]
        }
    },
    "include": ["src", "src/kitchensink"],
    "exclude": ["dist", "node_modules", "src/**/*.test.tsx", "src/**/*.stories.tsx"]
}
